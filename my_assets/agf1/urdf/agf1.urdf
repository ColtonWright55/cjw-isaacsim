<?xml version="1.0" encoding="utf-8"?>

<robot name="agf1">

    <link name="base_link">
        <collision>
            <origin xyz="0 0 0.02" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.075" length="0.03"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 1.247335" rpy="0 0 0"/>
            <geometry>
                <mesh filename="../meshes/Agility_Forge_Frame.obj" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="1.0"/>
        </inertial>
    </link>
    <link name="x_table">
        <collision>
            <origin xyz="0 0 0.02" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.075" length="0.03"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 1247335." rpy="0 0 0"/> <!-- TODO: Measure this -->
            <geometry>
                <mesh filename="../meshes/Agility_Forge_X_axis_Table.obj" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="1.0"/>
        </inertial>
    </link>


    <!-- TODO: Table limits -->
    <joint name="x_table_joint" type="prismatic">
        <parent link="base_link"/>
        <child link="x_table"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>  <!-- Move along X axis -->
        <limit lower="-0.5" upper="0.5" effort="1000" velocity="1.0"/>
    </joint>
    <joint name="y_table_joint" type="prismatic">
        <parent link="base_link"/>
        <child link="x_table"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>  <!-- Move along Y axis -->
        <limit lower="-0.3" upper="0.3" effort="1000" velocity="1.0"/>
    </joint>
</robot>